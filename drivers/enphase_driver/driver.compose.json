{
  "id": "enphase_driver",
  "name": {
    "en": "Enphase Envoy"
  },
  "class": "solarpanel",
  "capabilities": [
    "measure_power",
    "meter_power",
    "meter_power_today",
    "modules",
    "alarm_status"
  ],
  "platforms": [
    "local",
    "cloud"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
    {
      "id": "login_oauth2",
      "template": "login_oauth2"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "login_oauth2",
      "template": "login_oauth2"
    }
  ]
}